<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/knewave</item>
        <item name="android:padding">@dimen/textPadding</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="answerButtons" parent="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:width">170sp</item>
        <item name="android:backgroundTint">#F44336</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="navigationButtons" parent="answerButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:width">120dp</item>
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="questionPrepStyle" parent="textStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="questionPrepStyle2" parent="questionPrepStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/baloo_thambi</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#2D282A</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="navigationButtons2" parent="navigationButtons">
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:fontFamily">@font/baloo_thambi</item>
        <item name="android:textColor">#2D282A</item>
    </style>
</resources>